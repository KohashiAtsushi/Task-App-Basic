<% provide(:title, @user.name) %>

<div class="row">
  <h1>タスク詳細</h1>
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered" id="task-show-header">
      <tbody>
        <tr>
          <th class="col-md-2">ID</th>
          <td><%= @task.id %></td>
        </tr>
        <tr>
          <th>名称</th>
          <td><%= @task.index %></td>
        </tr>
        <tr>
          <th>詳細</th>
          <!-- ().html_safe はテキストのタグをHTMLで使うのに必要-->
          <td><%= convert_text_to_html_tag(@task.contents).html_safe %></td>
        </tr>
        <tr>
          <th>作成日</th>
          <td><%= @task.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        </tr>
        <tr>
          <th>更新日</th>
          <td><%= @task.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
        </tr>
      </tbody>
    </table>              
    <%= link_to "編集", edit_user_task_path(user_id: @user.id,id: @task.id) , class: "btn btn-lg btn-success" %>
    <%= link_to "削除", user_task_path(user_id: @user.id,id: @task.id), method: :delete ,
                        data: { confirm: @task.index + "削除してもよろしいですか？"},
                        class: "btn btn-lg btn-danger" %>
  </div>    
</div>
